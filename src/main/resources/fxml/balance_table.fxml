<?import javafx.scene.control.TableColumn?>
<fx:root type="javafx.scene.control.TableView" xmlns:fx="http://javafx.com/fxml" fx:id="balanceTable" >
    <columns>
        <TableColumn fx:id="columnAddress" editable="false" resizable="false" sortable="false" text="Address" prefWidth="${balanceTable.width*0.60}" />
        <TableColumn fx:id="columnBalance" editable="false" resizable="false" sortable="false" text="Balance" prefWidth="${balanceTable.width*0.20}"/>
        <TableColumn fx:id="columnConfirmations" editable="false" resizable="false" sortable="false" text="Confirmations" prefWidth="${balanceTable.width*0.20}"/>
    </columns>
</fx:root>
